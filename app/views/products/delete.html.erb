<%= link_to("<< Back to List", {:action => 'index', :line_id => @line.id}, :class => 'back-link') %>

<div class="products delete">
  <h2>Delete Product</h2>

  <%= form_for(:page, :url => {:action => 'destroy', :id => @page.id, :line_id => @line.id}) do |f| %>

    <p>Are you sure you want to permanently delete this product?</p>

    <p class="reference-name"><%= @product.name %></p>

